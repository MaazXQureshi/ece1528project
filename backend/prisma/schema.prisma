generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reading {
  id          Int      @id @default(autoincrement())
  vol         Float
  temp        Float
  time        DateTime @default(now())
  bottle_id   Int
}

model Threshold {
  id        Int    @id @default(autoincrement())
  bottle_id Int
  th        Float
}

model Cleaning {
  id        Int    @id @default(autoincrement())
  bottle_id Int
  clean     Boolean
}

model Spilling {
  id        Int    @id @default(autoincrement())
  bottle_id Int
  flag      Boolean
}